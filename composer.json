{
    "name": "scrumworks/property-reader",
    "description": "Property reader which can work with typed properties and phpdoc",
    "type": "library",
    "keywords": ["property"],
    "authors": [
        {
            "name": "Tomas Lang",
            "email": "tomas.lang@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "nette/utils": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4.2",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^0.12.48",
        "symplify/easy-coding-standard": "^8.3",
        "symplify/easy-testing": "^8.3",
        "migrify/template-checker": "^0.3.49",
        "symplify/phpstan-extensions": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "Amateri\\PropertyReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amateri\\PropertyReader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint" : "php vendor/bin/parallel-lint src tests",
        "phpstan" : "php -d newrelic.enabled=off -d memory_limit=2048M vendor/bin/phpstan.phar analyse --ansi --error-format symplify",
        "phpunit": "php vendor/bin/phpunit -c ./phpunit.xml",
        "test": ["@lint", "@phpstan", "@phpunit"]
    }
}
